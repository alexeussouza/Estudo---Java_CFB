package app;

public class Titular extends Jogador {
	
	private int contrato;
	
	public Titular() {
		
		System.out.printf("\n::.....  Construtor Titular   .....:::");
	}
	
	public Titular(int valor) {
		// TODO Auto-generated constructor stub
		
		System.out.printf("\nNumero do Contrato do Titular: %d", valor);	
	}
	
	public int getContrato() {
		return contrato;
	}
	
	public void setContrato(int contrato) {
		this.contrato = contrato;
	}
	
	public void calcularContrato(int valor) {
		
		contrato+= valor*10;
		System.out.printf("\nValor Contrato: %d", contrato);
	}
}
